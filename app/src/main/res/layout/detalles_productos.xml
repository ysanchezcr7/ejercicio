<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgdetalleProd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/contact_img_vasio" />

        <TextView
            android:id="@+id/tvtitleprodetall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgdetalleProd"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="String"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvdescriptiondetall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtitleprodetall"
            android:layout_centerHorizontal="true"
            android:text="String"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@+id/rvpreciodetall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvdescriptiondetall"
            android:layout_centerHorizontal="true">

        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ripler_start"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:id="@+id/rvExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>



</RelativeLayout>

